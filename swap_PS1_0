# Ruta de origen y destino
$origen = "C:\ruta\"
$destino = "D:\ruta\"

# Prefijo del archivo y extensión conocida
$prefijo = "Reporte_"
$extension = ".txt"

# Buscar el archivo que coincide con el prefijo y la extensión
$archivo = Get-ChildItem -Path $origen -Filter "$prefijo*$extension" | Select-Object -First 1

# Si se encontró el archivo, copiar y eliminar
if ($archivo) {
    # Copiar el archivo
    Copy-Item -Path $archivo.FullName -Destination $destino
    Write-Output "Archivo copiado: $($archivo.FullName) → $destino"

    # Eliminar el archivo original
    Remove-Item -Path $archivo.FullName -Force
    Write-Output "Archivo eliminado: $($archivo.FullName)"
} else {
    Write-Output "No se encontró ningún archivo con el prefijo '$prefijo' y extensión '$extension'."
}
