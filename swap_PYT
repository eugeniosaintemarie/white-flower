import openpyxl

# Cargar el archivo existente
archivo = 'ruta/a/tu/archivo.xlsx'
workbook = openpyxl.load_workbook(archivo)

# Seleccionar la hoja donde quieres agregar la fórmula
hoja = workbook.active  # o workbook['NombreDeLaHoja']

# Ejemplo de agregar una fórmula en la columna Q
# Supongamos que deseas sumar los valores de la columna P (desde la fila 1 hasta la 10)
for fila in range(1, 11):  # Cambia el rango según tus necesidades
    hoja[f'Q{fila}'] = f'=SUM(P{fila})'  # O la fórmula que necesites

# Guardar los cambios en el archivo
workbook.save(archivo)
