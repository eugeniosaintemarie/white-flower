Add-Type -TypeDefinition @"
using System;
using System.Runtime.InteropServices;
public class MouseMover {
    [DllImport("user32.dll", CharSet = CharSet.Auto, CallingConvention = CallingConvention.StdCall)]
    public static extern void mouse_event(uint dwFlags, uint dx, uint dy, uint cButtons, uint dwExtraInfo);
    public const int MOUSEEVENTF_MOVE = 0x0001;
    public static void MoveMouse(int x, int y) {
        mouse_event(MOUSEEVENTF_MOVE, (uint)x, (uint)y, 0, 0);
    }
}
"@

$counter = 0
while ($true) {
    # Mueve el mouse 1 píxel a la derecha y luego a la izquierda
    [MouseMover]::MoveMouse(1, 0)
    Start-Sleep -Seconds 10
    [MouseMover]::MoveMouse(-1, 0)
    Start-Sleep -Seconds 10

    # Incrementa el contador y muestra el mensaje en consola
    $counter++
    Write-Host "El script sigue activo. Ciclo número: $counter"
}
