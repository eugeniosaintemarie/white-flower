# Procesa cada cliente, línea 1 y línea 2
for i in range(0, len(lines), 2):
    if i + 1 < len(lines):  # Asegúrate de no salir del índice
        cliente = {}

        # Procesa la primera línea (suponiendo que siempre tiene el mismo número de campos)
        datos_linea_1 = lines[i].strip().split(';')

        # Procesa la segunda línea
        datos_linea_2 = lines[i + 1].strip().split(';')

        # Verificar si hay suficientes campos
        if len(datos_linea_2) < 15:
            print(f"Advertencia: línea {i + 1} tiene menos de 15 campos, rellenando con espacios.")
            # Rellenar con espacios si tiene menos de 15 campos
            datos_linea_2 += [' '] * (15 - len(datos_linea_2))

        # Mapear los campos usando índices, asegurándose que no haya out of range
        cliente['campo1'] = datos_linea_1[0]  # Ejemplo con la línea 1
        cliente['campo2'] = datos_linea_2[0]  # Campo 2
        cliente['campo3'] = datos_linea_2[1] if len(datos_linea_2) > 1 else ' '  # Campo 3
        cliente['campo4'] = datos_linea_2[2] if len(datos_linea_2) > 2 else ' '  # Campo 4
        # Sigue mapenado los demás campos de forma similar
        cliente['campo15'] = datos_linea_2[14] if len(datos_linea_2) > 14 else ' '  # Campo 15

        # Guardar cliente en la lista
        clientes.append(cliente)
    else:
        print(f"Advertencia: falta información para el cliente en la línea {i}")
