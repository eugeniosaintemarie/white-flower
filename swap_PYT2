# Procesa cada cliente, línea 1 y línea 2
for i in range(0, len(lines), 2):
    if i + 1 < len(lines):  # Asegúrate de que haya una línea 2 correspondiente
        cliente = {}

        # Procesa la primera línea
        datos_linea_1 = lines[i].strip().split(';')

        # Procesa la segunda línea
        datos_linea_2 = lines[i + 1].strip().split(';')

        # Mapear los campos de la primera línea
        cliente['nombre'] = datos_linea_1[0]
        cliente['apellido'] = datos_linea_1[1]
        # Otros campos de la primera línea...

        # Mapear los campos de la segunda línea
        cliente['monto1'] = datos_linea_2[0]  # Monto 1 siempre presente

        # Verificación para el campo Monto 2
        cliente['monto2'] = datos_linea_2[1] if len(datos_linea_2) > 1 and datos_linea_2[1] != '' else ' '

        # Verificación para el campo Monto 3
        cliente['monto3'] = datos_linea_2[2] if len(datos_linea_2) > 2 and datos_linea_2[2] != '' else ' '

        # Otros campos de la segunda línea...

        # Guardar cliente en la lista
        clientes.append(cliente)
    else:
        print(f"Advertencia: falta información para el cliente en la línea {i}")
