# Procesa cada cliente, línea 1 y línea 2
for i in range(0, len(lines), 2):
    if i + 1 < len(lines):  # Asegúrate de no salir del índice
        cliente = {}

        # Procesa la primera línea (suponiendo que siempre tiene el mismo número de campos)
        datos_linea_1 = lines[i].strip().split(';')

        # Procesa la segunda línea
        datos_linea_2 = lines[i + 1].strip().split(';')

        # Si hay menos de 15 campos, rellena con espacios los campos faltantes
        while len(datos_linea_2) < 15:
            datos_linea_2.append(' ')

        # Asigna los valores de los campos, verificando si están vacíos
        cliente['campo1'] = datos_linea_1[0]  # Ejemplo con la línea 1
        cliente['campo2'] = datos_linea_2[0]  # Siempre procesamos el campo 2

        # Verificamos campos que podrían estar vacíos
        cliente['campo3'] = datos_linea_2[1] if datos_linea_2[1] else ' '  # Campo 3 no puede estar vacío
        cliente['campo4'] = datos_linea_2[2] if datos_linea_2[2] else ' '  # Campo 4 no puede estar vacío
        # Sigue verificando otros campos que pueden estar vacíos...

        # Campos que no necesitan verificación (si están seguros que nunca estarán vacíos)
        cliente['campo14'] = datos_linea_2[13]  # Ejemplo con el campo 14
        cliente['campo15'] = datos_linea_2[14]  # Ejemplo con el campo 15

        # Guardar cliente en la lista
        clientes.append(cliente)
    else:
        print(f"Advertencia: falta información para el cliente en la línea {i}")
